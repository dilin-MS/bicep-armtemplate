{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "project_name": {
      "type": "string",
      "defaultValue": "dilintabapp0610",
      "metadata": {
        "description": "Project name."
      }
    },
    "web_app_name": {
      "type": "string",
      "defaultValue": "[concat(parameters('project_name'), 'webapp')]",
      "minLength": 2,
      "metadata": {
        "description": "Web app name."
      }
    },
    "function_app_name": {
      "type": "string",
      "defaultValue": "[concat(parameters('project_name'), 'functionapp')]",
      "minLength": 2,
      "metadata": {
        "description": "Web app name."
      }
    },
    "tab_serverfarms_name": {
      "type": "string",
      "defaultValue": "[concat(parameters('project_name'), 'tab')]",
      "minLength": 2,
      "metadata": {
        "description": "Name of App Service Plan for tab frontend."
      }
    },
    "tab_storageAccounts_name": {
      "type": "string",
      "defaultValue": "[concat(parameters('project_name'), 'tab')]",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of Storage Accounts for tab frontend."
      }
    },
    "function_serverfarms_name": {
      "type": "string",
      "defaultValue": "[concat(parameters('project_name'), 'func')]",
      "minLength": 2,
      "metadata": {
        "description": "Name of App Service Plan for function backend."
      }
    },
    "function_storageAccounts_name": {
      "type": "string",
      "defaultValue": "[concat(parameters('project_name'), 'func')]",
      "minLength": 3,
      "maxLength": 24,
      "metadata": {
        "description": "Name of Storage Accounts for function backend."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "appServicePlan_sku": {
      "type": "string",
      "defaultValue": "B1",
      "metadata": {
        "description": "The SKU of App Service Plan for tab frontend."
      }
    },
    "aadMetadataAddress": {
      "type": "string",
      "defaultValue": "https://login.microsoftonline.com/72f988bf-86f1-41af-91ab-2d7cd011db47/v2.0/.well-known/openid-configuration",
      "metadata": {
        "description": "aad metadata address."
      }
    },
    "allowedAadIds": {
      "type": "string",
      "defaultValue": "1fec8e78-bce4-4aaf-ab1b-5451cc387264;5e3ce6c0-2b1f-4285-8d4b-75ee78787346",
      "metadata": {
        "description": "Allowed AAD ids."
      }
    },
    "clientId": {
      "type": "string",
      "metadata": {
        "description": "Client id of AAD app."
      }
    },
    "clientSecret": {
      "type": "string",
      "metadata": {
        "description": "Client secret of AAD app."
      }
    },
    "oauthAuthorityHost": {
      "type": "string",
      "defaultValue": "https://login.microsoftonline.com",
      "metadata": {
        "description": "Microsoft oauth authority host"
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "72f988bf-86f1-41af-91ab-2d7cd011db47",
      "metadata": {
        "description": "tenant id."
      }
    }
  },
  "variables": {
    "tab_app_endpoint": "[concat('https://', parameters('tab_storageAccounts_name'), '.z13.web.core.windows.net')]",
    "application_id_uri": "[concat('api://', parameters('tab_storageAccounts_name'), '.z13.web.core.windows.net/', parameters('clientId'))]",
    "oauth_authority": "[concat(parameters('oauthAuthorityHost'), '/', parameters('tenantId'))]"
  },
  "resources": [
    {
      "apiVersion": "2021-04-01",
      "kind": "StorageV2",
      "location": "[parameters('location')]",
      "name": "[parameters('tab_storageAccounts_name')]",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "isHnsEnabled": false
      },
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "type": "Microsoft.Storage/storageAccounts"
    },
    {
      "apiVersion": "2021-04-01",
      "kind": "StorageV2",
      "location": "[parameters('location')]",
      "name": "[parameters('function_storageAccounts_name')]",
      "properties": {
        "accessTier": "Hot",
        "supportsHttpsTrafficOnly": true,
        "isHnsEnabled": true
      },
      "sku": {
        "name": "Standard_LRS",
        "tier": "Standard"
      },
      "type": "Microsoft.Storage/storageAccounts"
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[parameters('tab_serverfarms_name')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('appServicePlan_sku')]"
      },
      "kind": "app",
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[parameters('function_serverfarms_name')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Y1"
      },
      "kind": "functionapp",
      "properties": {
        "reserved": false
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "kind": "app",
      "name": "[parameters('web_app_name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('tab_serverfarms_name'))]"
      ],
      "properties": {
        "reserved": false,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('tab_serverfarms_name'))]",
        "siteConfig": {
          "alwaysOn": false,
          "http20Enabled": false,
          "numberOfWorkers": 1,
          "appSettings": [
            {
              "name": "aadMetadataAddress",
              "value": "[parameters('aadMetadataAddress')]"
            },
            {
              "name": "ALLOWED_APP_IDS",
              "value": "[parameters('allowedAadIds')]"
            },
            {
              "name": "CLIENT_ID",
              "value": "[parameters('clientId')]"
            },
            {
              "name": "CLIENT_SECRET",
              "value": "[parameters('clientSecret')]"
            },
            {
              "name": "oauthAuthority",
              "value": "[variables('oauth_authority')]"
            },
            {
              "name": "TAB_APP_ENDPOINT",
              "value": "[variables('tab_app_endpoint')]"
            },
            {
              "name": "IDENTIFIER_URI",
              "value": "[variables('application_id_uri')]"
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "kind": "functionapp",
      "name": "[parameters('function_app_name')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('function_serverfarms_name'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('function_storageAccounts_name'))]"
      ],
      "resources": [
        {
          "type": "config",
          "name": "authsettings",
          "apiVersion": "2018-02-01",
          "properties": {
            "enabled": true,
            "defaultProvider": "AzureActiveDirectory",
            "clientId": "[parameters('clientId')]",
            "issuer": "[concat(variables('oauth_authority'), '/v2.0')]",
            "allowedAudiences": [
              "[parameters('clientId')]",
              "[variables('application_id_uri')]"
            ]
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('function_app_name'))]"
          ]
        }
      ],
      "properties": {
        "reserved": false,
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('function_serverfarms_name'))]",
        "siteConfig": {
          "cors": {
            "allowedOrigins": ["[variables('tab_app_endpoint')]"]
          },
          "alwaysOn": false,
          "http20Enabled": false,
          "numberOfWorkers": 1,
          "appSettings": [
            {
              "name": "API_ENDPOINT",
              "value": "[concat('https://', parameters('function_app_name'), '.azurewebsites.net')]"
            },
            {
              "name": "ALLOWED_APP_IDS",
              "value": "[parameters('allowedAadIds')]"
            },
            {
              "name": "AzureWebJobsDashboard",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('function_storageAccounts_name'), ';AccountKey=', listKeys(resourceId(parameters('project_name'),'Microsoft.Storage/storageAccounts', parameters('function_storageAccounts_name')), '2019-04-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('function_storageAccounts_name'), ';AccountKey=', listKeys(resourceId(parameters('project_name'),'Microsoft.Storage/storageAccounts', parameters('function_storageAccounts_name')), '2019-04-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~3"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
            },
            {
              "name": "M365_APPLICATION_ID_URI",
              "value": "[variables('application_id_uri')]"
            },
            {
              "name": "M365_CLIENT_ID",
              "value": "[parameters('clientId')]"
            },
            {
              "name": "M365_CLIENT_SECRET",
              "value": "[parameters('clientSecret')]"
            },
            {
              "name": "M365_TENANT_ID",
              "value": "[parameters('tenantId')]"
            },
            {
              "name": "M365_AUTHORITY_HOST",
              "value": "[parameters('oauthAuthorityHost')]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('function_storageAccounts_name'), ';AccountKey=', listKeys(resourceId(parameters('project_name'),'Microsoft.Storage/storageAccounts', parameters('function_storageAccounts_name')), '2019-04-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~12"
            },
            {
              "name": "WEBSITE_RUN_FROM_PACKAGE",
              "value": "1"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[parameters('function_app_name')]"
            }
          ]
        }
      }
    }
  ],
  "outputs": {
    "tab_app_endpoint": {
      "type": "string",
      "value": "[variables('tab_app_endpoint')]"
    },
    "storageAccountConnectionString": {
      "type": "string",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('function_storageAccounts_name'), ';AccountKey=', listKeys(resourceId(parameters('project_name'),'Microsoft.Storage/storageAccounts', parameters('function_storageAccounts_name')), '2019-04-01').keys[0].value,';EndpointSuffix=core.windows.net')]"
    }
  }
}
